---
interface Props {
    title: string;
    imageFront: string;
    imageBack: string;
}

const { title, imageFront, imageBack } = Astro.props;
---

<div class="card">
    <div class="card-inner" onclick="flipCard()">
		<div class="card-back">
            <img src={imageBack} alt={title} class="img" />
        </div>
        <div class="card-front">
            <img src={imageFront} alt={title} class="img" />
        </div>
    </div>
</div>

<style>
    .card {
        perspective: 1000px;
        width: 160px;
        height: 160px;
        position: relative;
    }

    .card-inner {
        position: absolute;
        width: 100%;
        height: 100%;
        text-align: center;
        transition: transform 0.6s;
        transform-style: preserve-3d;
        cursor: pointer;
    }

    .card:active .card-inner {
        transform: rotateY(180deg);
    }

    .card-front, .card-back {
        position: absolute;
        width: 160px;
        height: auto;
        backface-visibility: hidden;
        display: flex;
        justify-content: center;
        align-items: center;
        border-radius: 7px;
        overflow: hidden;
    }

    .card-front {
        transform: rotateY(180deg);
    }

    .img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 7px;
    }
</style>

<script>
    function flipCard() {
        const cardInner = document.querySelector('.card-inner');
        cardInner.classList.toggle('is-flipped');
    }
</script>
